<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_bottom_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linear_bottom_common"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton 
            android:id="@+id/ib_home"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/id_buttom_bg"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="@null"
            android:src="@drawable/id_lottery_home"/>
        <ImageButton 
            android:id="@+id/ib_hall"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="@null"
       		android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_lottery_hall"/>
        <ImageButton 
            android:id="@+id/ib_money"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="@null"
            android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_lottery_recharge"/>
        <ImageButton 
            android:id="@+id/ib_mylottery"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:contentDescription="@null"
            android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_lottery_myself"/>
    </LinearLayout>
    
    <!-- 购彩界面 -->
    <LinearLayout
        android:id="@+id/linear_bottom_buylottery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_buttom_bg"
        android:layout_gravity="center_vertical">
        <ImageButton 
            android:id="@+id/ib_clear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/id_buttom_bg"
            android:scaleType="centerInside"
            android:contentDescription="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/id_clear_choose"/>
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <ImageButton 
            android:id="@+id/ib_ok"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:contentDescription="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_choose_ok"/>
    </LinearLayout>

</LinearLayout>
